<div class="panel panel-default">
  <div class="panel-body">
    <%= form_with(model: course, local: true, class: 'form-horizontal') do |form| %>
      <% if course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

          <ul>
          <% course.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label(:name, class:'col-sm-2 control-label') %>
        <%= form.text_field :name, id: :course_name %>
      </div>

      <div class="form-group">
        <%= form.label(:course_organization, class:'col-sm-2 control-label') %>
        <%= form.text_field :course_organization, id: :course_name %>
      </div>

      <div class="form-group">
        <%= form.label(:hidden, class:'col-sm-2 control-label') %>
        <%= form.check_box :hidden %>
      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit %>
          </div>
      </div>
    <% end %>

  </div>
</div>
